<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fragment_dialog_bg"

    android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_title"
    android:padding="10dp"
    android:text="当前播放: "
    android:textStyle="bold"
    android:ellipsize="end"
    android:maxLines="1"
    android:textSize="19sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></TextView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_height="40dp">
    <TextView
        android:id="@+id/tv_music_list_form"
        android:paddingTop="7dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/b3v"
        android:drawablePadding="5dp"
        android:text="循环列表"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="40dp"></TextView>
    <ImageButton
        android:id="@+id/ibtn_music_delete_all"
        android:src="@drawable/litter"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
       android:scaleType="center"
        android:layout_height="match_parent"></ImageButton>
</RelativeLayout>
    <ListView
        android:id="@+id/lv_music_list"
        android:layout_width="match_parent"
        android:layout_height="500dp"></ListView>
</LinearLayout>
